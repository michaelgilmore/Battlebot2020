<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cc.gilmore.dressmike.CameraActivity" >

    <ImageView
        android:id="@+id/imgPants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnPants"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/imgShirt"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_above="@id/btnShirt"
        android:layout_alignTop="@+id/btnShirt"
        android:src="@drawable/ic_launcher" />

    <Button
        android:id="@+id/btnShirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:text="Shirt" />

    <Button
        android:id="@+id/btnPants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnShirt"
        android:layout_below="@+id/btnShirt"
        android:layout_marginRight="14dp"
        android:layout_marginTop="91dp"
        android:text="Pants" />

</RelativeLayout>